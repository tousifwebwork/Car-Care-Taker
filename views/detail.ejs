<%- include('partials/header') %>
<%- include('partials/nav', { activePage: 'detail', isLoggedIn: isLoggedIn }) %>

<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        
        <!-- Page Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Car Details</h1>
            <p class="text-gray-600">Complete information about your vehicle</p>
        </div>

        <!-- Success Message -->
        <% if (typeof query !== 'undefined' && query.updated === 'true') { %>
        <div id="successMsg" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 flex items-center justify-between">
            <div>
                <strong>Success!</strong> Car details have been updated successfully.
            </div>
            <button onclick="closeSuccessMsg()" class="text-green-700 hover:text-green-900 font-bold text-xl ml-4">
                ‚úï
            </button>
        </div>
        <script>
            function closeSuccessMsg() {
                document.getElementById('successMsg').style.display = 'none';
            }
            
            // Auto-hide after 5 seconds
            setTimeout(function() {
                const msg = document.getElementById('successMsg');
                if (msg) {
                    msg.style.display = 'none';
                }
            }, 5000);
        </script>
        <% } %>

        <!-- Action Buttons -->
        <div class="flex gap-3 mb-6">
            <a href="/main" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                ‚Üê Back to Main
            </a>
            <a href="/editcar/<%= car._id %>" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700">
                ‚úèÔ∏è Edit Details
            </a>
        </div>

        <!-- Main Content Card -->
        <div class="bg-white rounded-lg shadow border">
            
            <!-- Car Header Section -->
            <div class="bg-gray-50 px-6 py-6 border-b">
                <div class="flex flex-col lg:flex-row gap-6">
                    <!-- Car Image -->
                    <div class="flex-shrink-0">
                        <% if (car.image) { %>
                        <div class="w-32 h-32 lg:w-40 lg:h-40 rounded border">
                            <img src="<%= car.image %>" alt="Car Image" class="w-full h-full object-cover rounded">
                        </div>
                        <% } else { %>
                        <div class="w-32 h-32 lg:w-40 lg:h-40 rounded bg-gray-100 flex items-center justify-center border">
                            <span class="text-gray-400">No Image</span>
                        </div>
                        <% } %>
                    </div>
                    
                    <!-- Car Title Info -->
                    <div class="flex-1">
                        <h2 class="text-3xl font-bold mb-4 text-gray-900"><%= car.Username %></h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                            <div class="border rounded px-3 py-2">
                                <p class="text-xs text-gray-500">Car Number</p>
                                <p class="font-semibold"><%= car.car_no || 'N/A' %></p>
                            </div>
                            <div class="border rounded px-3 py-2">
                                <p class="text-xs text-gray-500">Phone</p>
                                <p class="font-semibold"><%= car.phonenumber || 'N/A' %></p>
                            </div>
                            <% if (car.email) { %>
                            <div class="border rounded px-3 py-2 sm:px-4 sm:py-3">
                                <p class="text-xs text-gray-500">Email</p>
                                <p class="font-semibold text-sm sm:text-base break-all md:break-normal leading-snug"><%= car.email %></p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Details Grid -->
            <div class="p-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    
                    <!-- PUC Information Card -->
                    <div class="border-2 border-green-200 rounded-lg p-4">
                        <div class="flex items-center mb-3">
                            <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center mr-3">
                                <span class="text-white text-sm">‚úì</span>
                            </div>
                            <h3 class="text-lg font-bold text-green-800">PUC Certificate</h3>
                        </div>
                        
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-green-700 font-medium">Last PUC:</span>
                                <span class="text-green-800 font-bold">
                                    <%= car.lastPUC ? new Date(car.lastPUC).toLocaleDateString('en-GB') : 'N/A' %>
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-green-700 font-medium">Next PUC:</span>
                                <span class="text-green-800 font-bold">
                                    <%= car.nextPUC ? new Date(car.nextPUC).toLocaleDateString('en-GB') : 'N/A' %>
                                </span>
                            </div>
                            <% if (car.nextPUC) { %>
                            <div class="mt-3 pt-3 border-t border-green-200">
                                <%
                                    const today = new Date();
                                    today.setHours(0, 0, 0, 0);
                                    const nextPUC = new Date(car.nextPUC);
                                    nextPUC.setHours(0, 0, 0, 0);
                                    const daysLeft = Math.ceil((nextPUC - today) / (1000 * 60 * 60 * 24));
                                %>
                                <% if (daysLeft > 30) { %>
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-green-100 text-green-800 border border-green-300">
                                    ‚úÖ <%= daysLeft %> days remaining
                                </span>
                                <% } else if (daysLeft > 7) { %>
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-yellow-100 text-yellow-800 border border-yellow-300">
                                    ‚ö†Ô∏è <%= daysLeft %> days left
                                </span>
                                <% } else if (daysLeft > 0) { %>
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-orange-100 text-orange-800 border border-orange-300">
                                    üö® <%= daysLeft %> days left - URGENT
                                </span>
                                <% } else { %>
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-red-100 text-red-800 border border-red-300">
                                    üö® EXPIRED
                                </span>
                                <% } %>
                            </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Insurance Information Card -->
                    <div class="border-2 border-blue-200 rounded-lg p-4">
                        <div class="flex items-center mb-3">
                            <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center mr-3">
                                <span class="text-white text-sm">üõ°</span>
                            </div>
                            <h3 class="text-lg font-bold text-blue-800">Insurance</h3>
                        </div>
                        
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-blue-700 font-medium">Last Insurance:</span>
                                <span class="text-blue-800 font-bold">
                                    <%= car.lastInsurance ? new Date(car.lastInsurance).toLocaleDateString('en-GB') : 'N/A' %>
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-blue-700 font-medium">Next Insurance:</span>
                                <span class="text-blue-800 font-bold">
                                    <%= car.nextInsurance ? new Date(car.nextInsurance).toLocaleDateString('en-GB') : 'N/A' %>
                                </span>
                            </div>
                            <% if (car.nextInsurance) { %>
                            <div class="mt-3 pt-3 border-t border-blue-200">
                                <%
                                    const todayIns = new Date();
                                    todayIns.setHours(0, 0, 0, 0);
                                    const nextInsurance = new Date(car.nextInsurance);
                                    nextInsurance.setHours(0, 0, 0, 0);
                                    const insuranceDaysLeft = Math.ceil((nextInsurance - todayIns) / (1000 * 60 * 60 * 24));
                                %>
                                <% if (insuranceDaysLeft > 30) { %>
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-blue-100 text-blue-800 border border-blue-300">
                                    ‚úÖ <%= insuranceDaysLeft %> days remaining
                                </span>
                                <% } else if (insuranceDaysLeft > 7) { %>
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-yellow-100 text-yellow-800 border border-yellow-300">
                                    ‚ö†Ô∏è <%= insuranceDaysLeft %> days left
                                </span>
                                <% } else if (insuranceDaysLeft > 0) { %>
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-orange-100 text-orange-800 border border-orange-300">
                                    üö® <%= insuranceDaysLeft %> days left - URGENT
                                </span>
                                <% } else { %>
                                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-red-100 text-red-800 border border-red-300">
                                    üö® EXPIRED
                                </span>
                                <% } %>
                            </div>
                            <% } %>
                        </div>
                    </div>

                </div>

                <!-- Quick Actions -->
                <div class="mt-6 pt-4 border-t">
                    <h4 class="text-lg font-semibold mb-3">Quick Actions</h4>
                    <div class="flex gap-3">
                        <a href="/editcar/<%= car._id %>" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">
                            ‚úèÔ∏è Edit Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
